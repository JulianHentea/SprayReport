
<% provide(:title, @user.name) %>


</div>	<div class="main-area">
		<div class="container">
			<div class="row">
			  <aside class="span4">
			    <section>
			      <h1>
			        <%= gravatar_for @user %>
			        <%= @user.name %>
			      </h1>
			    </section>
			    <section>
			      <%= render 'shared/stats' %>
			    </section>
